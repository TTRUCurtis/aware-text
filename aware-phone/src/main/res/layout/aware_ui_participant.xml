<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.AwareParticipant">

    <LinearLayout
        android:id="@+id/ap_study_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ap_clickable_container"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ap_icon_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="12dp"
            tools:ignore="ImageContrastCheck"
            tools:src="@drawable/ic_launcher_aware" />

        <TextView
            android:id="@+id/ap_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textSize="36sp"
            tools:text="Aware Study"/>

        <TextView
            android:id="@+id/ap_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:textColor="#546E7A"
            android:textSize="18sp"
            tools:text="Device Id: Miguel" />

        <TextView
            android:id="@+id/ap_study_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:textColor="#546E7A"
            android:textSize="18sp"
            tools:text="Study Name: Summer 2024" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/ap_clickable_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/ap_study_info_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/inside_clickable_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/ap_esm_container_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:maxLength="40"
                android:textColor="#546E7A"
                android:textSize="14sp"
                tools:text="FOR YOU TO COMPLETE"/>
            <LinearLayout
                android:id="@+id/ap_esm_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/item_background"
                >

            </LinearLayout>

            <TextView
                android:id="@+id/ap_study_options_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:maxLength="40"
                android:textColor="#546E7A"
                android:textSize="14sp"
                tools:text="AWARE STUDY OPTIONS" />

            <LinearLayout
                android:id="@+id/ap_study_options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_background"
                >

                <include
                    android:id="@+id/sync_item"
                    layout="@layout/aware_item_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separator_grey" />
                <include
                    android:id="@+id/quit_study_item"
                    layout="@layout/aware_item_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/study_options_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separator_grey" />
                <include
                    android:id="@+id/revoked_permission_item"
                    layout="@layout/aware_item_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>